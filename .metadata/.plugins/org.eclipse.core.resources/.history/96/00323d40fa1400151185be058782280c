 * <br>Copyright (C), 2005-2008, yeeku.H.Lee
 * <br>This program is protected by copyright laws.
 * <br>Program Name:
 * <br>Date: 
 */
public interface UserDao  
{

    /**
      * 根据id查找员工
      * @param id 需要查找的员工id
      */  
    User get(Integer id);
    /**
      * 增加员工
      * @param emp 需要增加的员工
      */       
    void save(User emp);

    /**
      * 修改员工
      * @param emp 需要修改的员工
      */  
    void update(User emp);

    /**
      * 删除员工
      * @param id 需要删除的员工id
      */  
    void delete(Integer id);

    /**
      * 删除员工
      * @param emp 需要删除的员工
      */  
    void delete(User emp);

    /**
      * 查询全部员工
      * @return 全部员工
      */ 
    List<User> findAll();

    /**
      * 根据用户名和密码查询员工
      * @param name 员工的用户名
      * @param pass 员工的密码
      * @return 符合用户名和密码的员工集合
      */ 
    List<User> findByNameAndPass(String name , String pass);

    /**
      * 根据用户名查询员工
      * @param name 员工的用户名
      * @return 符合用户名的员工
      */ 
    User findByName(String name);



}