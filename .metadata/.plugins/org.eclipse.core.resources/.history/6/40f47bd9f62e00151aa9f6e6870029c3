<script>

function addNewExpenseItem(){
	var expItem = document.getElementById("expenseItem");
	var cloneExpItem = expItem.cloneNode(true);
	cloneExpItem.setAttribute("id","expenseItem1")
	expItem.appendChild(cloneExpItem);
}

